@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script type="text/javascript">
    $(window).on('load', function () {
        if (@ViewBag.LoginError == 1) {
            $('#LoginRuutu').modal('show');
        }
    });
    </script>
}


